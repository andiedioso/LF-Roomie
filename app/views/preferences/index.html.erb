<p id="notice"><%= notice %></p>

<h1>Your Preferences</h1>

<table>
  <thead>
    <tr>
      <th>Preference</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_preferences.each do |preference| %>
      <tr>
        <td><%= preference.prefer %></td>
        <td><%= link_to 'Show', preference %></td>
        <td><%= link_to 'Remove', destroy_preferences_path(preference)%></td>
      </tr>
    <% end %>
  </tbody>
</table>


<h1>All Preferences</h1>

<table>
  <thead>
    <tr>
      <th>Preference</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @preferences.each do |preference| %>
      <tr>
        <td><%= preference.prefer %></td>
        <td><%= link_to 'Show', preference %></td>
      </tr>
    <% end %>
  </tbody>
</table>



<br>

<%= link_to 'Suggest A New Preference', new_preference_path %>
